{
  "name": "casa-cli",
  "version": "0.3.1",
  "module": "cli.ts",
  "type": "module",
  "scripts": {
    "build:native": "bun build ./cli.ts --minify --compile --outfile ./dist/casa-linux-x86_64",
    "build:nodejs": "bun build ./cli.ts --minify --target=node --outfile ./dist/casa-nodejs",
    "build:bun": "bun build ./cli.ts --minify --target=bun --outfile ./dist/casa-bun",
    "test": "bun test",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^24.10.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "env-paths": "^3.0.0",
    "marked": "^17.0.1",
    "marked-terminal": "^7.3.0",
    "meow": "^14.0.0",
    "plaintext-casa": "file:../lib",
    "smol-toml": "^1.5.2"
  }
}
